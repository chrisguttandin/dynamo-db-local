        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.57.0",
        "eslint-config-holy-grail": "^60.0.35",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.1",
        "mocha": "^11.6.0",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "sinon": "^17.0.2",
        "sinon-chai": "^3.7.0",
        "tsconfig-holy-grail": "^15.0.2",
